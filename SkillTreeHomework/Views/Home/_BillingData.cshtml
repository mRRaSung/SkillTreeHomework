@model SkillTreeHomework.ViewModels.Home.IndexViewModel

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>

            @{ 
                int i = 0;
            }

            @foreach(var item in Model.BillingDatas)
            {
                <tr>
                    <td>@(++i)</td>
                    <td>@item.Type.ToString()</td>
                    <td>@item.Date.ToString("yyyy-MM-dd")</td>
                    <td>@item.Amount.ToString("#,0")</td>
                </tr>
            }
        </table>
    </div>
</div>
